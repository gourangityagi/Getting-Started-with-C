#include<iostream>
using namespace std;

int main()
{
char str[100],*pt;
int i;
cout<<"Enter your name:- ";
cin.get(str,20);
cout<<str<<endl;
for(i = 0; str[i] != '\0'; i++){
    i++;
}
cout << "Length:-" <<i<<endl;
// counting with pointer
pt = str;
for(i=0;*pt != '\0';i++) {
    pt++;
 }
cout<<"Length_pt:-"<< i;
return 0;
} 
