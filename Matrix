#include <iostream>
using namespace std;

int main()
{
int r, c,a[100][100],b[100][100],s[100][100],m[100][100],i,j,k;

    cout << "Enter number of rows:- ";
    cin >> r;

    cout << "Enter number of columns:- ";
    cin >> c;

    cout << endl << "Enter the elements:- " << endl;
    for(i = 0; i < r; ++i)
       for(j = 0; j < c; ++j)
       {
           cout << "Enter element " << i + 1 << j + 1 << " : ";
           cin >> a[i][j];
       }
       
    cout << endl << "Your matrix is: " << endl;
    for(i = 0; i < r; ++i)
        for(j = 0; j < c; ++j)
        {
            cout << a[i][j] << "  ";
            if(j == c - 1)
                cout << endl;
        }
    cout << "Enter number of rows:- ";
    cin >> r;

    cout << "Enter number of columns:- ";
    cin >> c;

    cout << endl << "Enter the elements:- " << endl;
    for(i = 0; i < r; ++i)
       for(j = 0; j < c; ++j)
       {
           cout << "Enter element " << i + 1 << j + 1 << " : ";
           cin >> b[i][j];
       }
       
    cout << endl << "Your matrix is: " << endl;
    for(i = 0; i < r; ++i)
        for(j = 0; j < c; ++j)
        {
            cout << b[i][j] << "  ";
            if(j == c - 1)
                cout << endl;
        }
// Addition
    for(i = 0; i < r; ++i)
        for(j = 0; j < c; ++j)
            s[i][j] = a[i][j] + b[i][j];
        {
        if(r == r & c == c)
        {
            cout << endl;
            cout << "Can't do addition"<<endl;
        }
        else
        {
        cout << endl << "Sum of two matrix is: " << endl;
        for(i = 0; i < r; ++i)
         for(j = 0; j < c; ++j)
        {
            cout << s[i][j] << "  ";
            if(j == c - 1)
                cout << endl;
        }}}
return 0;
}
