#include<iostream>
using namespace std;

int main()
{
    int var =3;
    int*ptr = &var;
    cout<<var<<endl;// value of var
    cout<<*ptr<<endl;// value of address given by ptr
    cout<<&var<<endl;//address of var
    cout<<ptr<<endl;// value of ptr
    cout<<&ptr<<endl;//address of ptr
    float var1 = 10.23;
    float*ptr1=&var1;
    cout<<var1<<endl;// value of var1
    cout<<*ptr1<<endl;// value of address given by ptr1
    cout<<&var1<<endl;//address of var1
    cout<<ptr1<<endl;// value of ptr1
    cout<<&ptr1<<endl;//address of ptr1
    //matrix
    int vas[5] = {1,2,3,4,5},i;
    int*ptr2 = &vas[0];
    for (int i = 0; i < 5; i++){
        
    cout<<*ptr2;
    ptr2++;}
    return 0;

}
